# Headers de Seguridad para Xiaomi Noticias

# Content Security Policy (CSP)
# Permite contenido del mismo origen, Google Fonts, AdSense y scripts inline necesarios
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://pagead2.googlesyndication.com https://www.googletagmanager.com https://cdn.ampproject.org; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://pagead2.googlesyndication.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://pagead2.googlesyndication.com https://www.google.com https://googleads.g.doubleclick.net; connect-src 'self' https://pagead2.googlesyndication.com; frame-src https://googleads.g.doubleclick.net https://tpc.googlesyndication.com;"

# Cross-Origin Opener Policy (COOP)
# Aísla el contexto de navegación para prevenir ataques de timing
Header always set Cross-Origin-Opener-Policy "same-origin-allow-popups"

# X-Frame-Options (XFO)
# Previene ataques de clickjacking
Header always set X-Frame-Options "SAMEORIGIN"

# Headers adicionales de seguridad

# X-Content-Type-Options
# Previene MIME type sniffing
Header always set X-Content-Type-Options "nosniff"

# Referrer Policy
# Controla qué información de referrer se envía
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# X-XSS-Protection
# Habilita protección XSS en navegadores antiguos
Header always set X-XSS-Protection "1; mode=block"

# Permissions Policy
# Controla qué APIs del navegador pueden usar las páginas
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

# Strict-Transport-Security (HSTS)
# Fuerza conexiones HTTPS (solo si se usa HTTPS)
# Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

# Cache Control para recursos estáticos
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    Header set Cache-Control "public, max-age=31536000"
</FilesMatch>

# Cache Control para HTML
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "public, max-age=3600"
</FilesMatch>
